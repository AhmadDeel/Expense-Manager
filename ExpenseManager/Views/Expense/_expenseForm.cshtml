@model ExpenseManager.Models.ExpenseReport

<div>
    <div class="row">
        <div class="col-md-8">
            <form id="expenseForm">
                <input type="hidden" asp-for="ItemId" />
                <div class="form-group">
                    <label asp-for="ItemName" class="control-label"></label>
                    <input asp-for="ItemName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Category" class="control-label"></label>
                    <select asp-for="Category" class="form-control">
                        <option value="">- انتخاب کنید -</option>
                        <option value="Food">خوراکی</option>
                        <option value="Shopping">خرید</option>
                        <option value="Travel">رفت و آمد</option>
                        <option value="Health">سلامتی</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Amount" class="control-label"></label>
                    <input asp-for="Amount" class="form-control"/>
                </div>
                <div class="form-group" id="calender-container">
                    <label asp-for="ExpenseDate" class="control-label"></label>
                    <div class="input-group date" id="mydatepicker" data-date-format="MM-dd-yyyy">
                        <input asp-for="ExpenseDate" type="text" class="form-control" />
                        <span class="input-group-addon">
                            <i class="glyphicon glyphicon-calendar"></i>
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <button type="button" onclick="addData()" id="btnSubmit" class="btn btn-block btn-info">ذخیره</button>
                </div>
            </form>
        </div>
    </div>
</div>